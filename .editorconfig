root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_size = 2

[*.{js}]
charset = utf-8

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

# Matches the exact files either package.json or .travis.yml
[{package.json,.travis.yml}]
indent_style = space
indent_size = 2